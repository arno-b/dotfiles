startup_message off
deflogin on
chdir
autodetach on
pow_detach_msg "Screen session of \$LOGNAME \$:cr:\$:nl:ended."
defscrollback 10000
vbell off
vbell_msg "bell"
hardstatus alwayslastline "%{=b}%{M} Screens: %{= y}%-Lw%{= G}%n %t%{= y}%+Lw %{= y}%="
activity "Activity in %t(%n)"
shelltitle ""

# change command character from ctrl-a to ctrl-w (emacs users may want this)
escape ^Ww

# remove dangerous binding
bind ^k
bind ^\
bind \\ quit
bind ^h
bind h
bind 'K' kill
bind 'I' login on
bind 'O' login off
bind '}' history


#Permettre le scroll avec Shift + PgUp/PgDw
termcapinfo xterm ti@:te@
termcapinfo xterm-color ti@:te@
termcapinfo rxvt ti@:te@
bindkey -m "^[[5;2~" stuff ^b
bindkey -m "^[[6;2~" stuff ^f

# Change title
bind T title

# switch screen F{1,2,3,4,5}
bindkey "^[[11~" select 0
bindkey "^[[12~" select 1
bindkey "^[[13~" select 2
bindkey "^[[14~" select 3
bindkey "^[[15~" select 4
